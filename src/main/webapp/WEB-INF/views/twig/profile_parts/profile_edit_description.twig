<div class="container-fluid d-flex justify-content-center">
    <div class="description">
        <form action="{{ fullUri("/profile/edit") }}" method="POST" class="reg" accept-charset="UTF-8">
            <input {{ csrf() }} type="hidden">
            <div class="form-group">
                <textarea class="form-control" name="description" style="height: 500px; width: 100%; font-family:arial">{{user.getDescription()}}</textarea>
            </div>
            <div>
                <button class="btn btn-primary" value='edit' type="submit">Изменить</button>
            </div>
        </form>
    </div>
</div>
